@{
    ViewData["Title"] = "Home Client";
    Layout = "/Views/Shared/Client/_LayoutClient.cshtml";
}

<!-- CSHTML -->
<div id="employeeGuid" data-guid="@Context.Session.GetString("EmployeeGuid")"></div>

<div class="container mb-30 mt-50">
    <div class="row">
        <div class="col-xl-10 col-lg-12 m-auto">
            <div class="mb-50">
                <h1 class="heading-2 mb-10">History Contract</h1>
            </div>
            <div class="table-responsive shopping-summery">
                <table id="tableGetIdleHistory" class="table table-wishlist">
                    <thead>
                        <tr style="text-align:center;" class="main-heading">
                            <th scope="col" colspan="2">Foto</th>
                            <th scope="col" colspan="1">Name</th>
                            <th scope="col" colspan="1">Rate</th>
                            <th scope="col" colspan="1">EndContract</th>
                            <th scope="col" colspan="1">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        <!-- Diisi oleh JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ratingInterview" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="ratingForm" class="needs-validation" novalidate>

                    <div class="rating" style="display: inline-block; margin-bottom: 20px;">
                        <input type="radio" name="rating" id="star5" value="1" style="display: none;">
                        <label for="star5" style="font-size: 24px; color: gray; cursor: pointer; display: inline-block; margin: 0;">&#9733;</label>

                        <input type="radio" name="rating" id="star4" value="2" style="display: none;">
                        <label for="star4" style="font-size: 24px; color: gray; cursor: pointer; display: inline-block; margin: 0;">&#9733;</label>

                        <input type="radio" name="rating" id="star3" value="3" style="display: none;">
                        <label for="star3" style="font-size: 24px; color: gray; cursor: pointer; display: inline-block; margin: 0;">&#9733;</label>

                        <input type="radio" name="rating" id="star2" value="4" style="display: none;">
                        <label for="star2" style="font-size: 24px; color: gray; cursor: pointer; display: inline-block; margin: 0;">&#9733;</label>

                        <input type="radio" name="rating" id="star1" value="5" style="display: none;">
                        <label for="star1" style="font-size: 24px; color: gray; cursor: pointer; display: inline-block; margin: 0;">&#9733;</label>
                    </div>


                    <label for="feedback" class="form-label"></label>
                    <textarea id="feedback" placeholder="Masukkan feedback Anda di sini..." style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; resize: none; height: 100px;"></textarea>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal" style="background-color: #d9534f; color: white; padding: 10px 20px; border: none; font-size: 1em; border-radius: 5px; width: 100px;">Close</button>
                        <button type="submit" id="rating" class="btn btn-primary btn-save" style="background-color: #6baf92; color: white; padding: 10px 20px; border: none; font-size: 1em; border-radius: 5px; width: 100px;">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <!-- DataTables JavaScript -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- DataTables Buttons JavaScript -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.colVis.min.js"></script>


    <script src="~/js/ListHire.js" asp-append-version="true"></script>

}
