@{
    ViewData["Title"] = "Index Employee";
    Layout = "/Views/Shared/Admin/_Layout.cshtml";
}

<style>
    .read-more,
    .read-less {
        color: blue;
        cursor: pointer;
        text-decoration: underline;
    }

        .read-more:hover,
        .read-less:hover {
            color: darkblue;
        }
</style>

<!-- Complex Headers -->
<div class="card">
    <h5 class="card-header">Data Idle</h5>
    <div class="dt-action-buttons text-end pt-3 pt-md-0">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCenter">
            <i class="fa-sharp fa-solid fa-user-plus"></i>
        </button>
    </div>
    <div class="card-datatable text-nowrap table-responsive">
        <table id="tableEmployee" class="dt-complex-header table table-bordered dt-responsive table datatables-basic table">
            <thead>
                <tr>
                    <th rowspan="2">No</th>
                    <th colspan="3" style="text-align: center;">Biodata</th>
                    <th colspan="7" style="text-align: center;">Info</th>
                    <th class="no-export" rowspan="2" style="text-align: center;">Action</th>
                </tr>
                <tr>
                    <th class="no-export">Foto</th>
                    <th>Full Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Skill</th>
                    <th>Rating</th>
                    <th>status</th>
                    <th>Status Account</th>
                    <th class="no-export">Cv</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<!--/ Complex Headers -->
<!-- Modal Create -->
<div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Create Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createEmployeeForm" class="needs-validation" novalidate>
                    <div class="row">
                        <!-- Inputan untuk data pribadi employee -->
                        <div class="col mb-3">
                            <label for="firstNameInput" class="form-label">First Name</label>
                            <input type="text" id="firstNameInput" class="form-control" placeholder="Enter First Name" required />
                        </div>
                        <div class="col mb-3">
                            <label for="lastNameInput" class="form-label">Last Name</label>
                            <input type="text" id="lastNameInput" class="form-control" placeholder="Enter Last Name">
                        </div>
                        <div class="col mb-3">
                            <label for="genderInput" class="form-label">Gander</label>
                            <select class="form-control" id="genderInput" required>
                                <option value="0">Female</option>
                                <option value="1">Male</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label for="profilePictureInput" class="form-label">Profile Picture</label>
                            <input type="file" id="profilePictureInput" class="form-control" />
                        </div>

                        <div class="col mb-3">
                            <label for="cvInput" class="form-label">CV File</label>
                            <input type="file" id="cvInput" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label for="emailInput" class="form-label">Email</label>
                            <input type="email" id="emailInput" class="form-control" placeholder="xxxx@xxx.xx" required />
                        </div>
                        <div class="col mb-3">
                            <label for="phoneNumberInput" class="form-label">Phone Number</label>
                            <input type="text" id="phoneNumberInput" class="form-control" placeholder="081.xxx.xxx.xx" required />
                        </div>
                    </div>


                    <div class="row">
                        <div class="col mb-3">
                            <select class="form-control" id="gradeInput" required>
                                <option value="0">A</option>
                                <option value="1">B</option>
                            </select>
                        </div>
                        <div class="col mb-3">
                            <select class="form-control" id="statusEmployeeInput" required>
                                <option value="0">Idle</option>
                                <option value="1">Owner</option>
                                <option value="2">OnSite</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-3">
                            <label for="passwordInput" class="form-label">Password</label>
                            <input type="password" placeholder="Coba12345" id="passwordInput" class="form-control" required />
                        </div>
                        <div class="col mb-3">
                            <label for="confirmPasswordInput" class="form-label">Confirm Password</label>
                            <input type="password" placeholder="Coba12345" id="confirmPasswordInput" class="form-control" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-3">
                            <label for="skillsInput" class="form-label">Skills</label><br />
                            <select id="skillsInput" class="form-control" multiple="multiple" style="width: 500px;" placeholder="Pilih keterampilan..."></select>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" id="createButton" class="btn btn-primary btn-save">Create</button>
                        <div class="spinner-border text-dark" role="status" style="display: none;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="modalEditEmployee" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Edit Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateIdleForm" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col mb-3">
                            <label for="editFirstName" class="form-label">First Name</label>
                            <input type="text" id="editFirstName" class="form-control" placeholder="Enter First Name" required />
                        </div>
                        <div class="col mb-3">
                            <label for="editLastName" class="form-label">Last Name</label>
                            <input type="text" id="editLastName" class="form-control" placeholder="Enter Last Name" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label" for="editPhoneNumber">Phone Number</label>
                            <input type="text" id="editPhoneNumber" class="form-control" placeholder="Enter Phone Number" required />
                        </div>
                        <div class="col mb-3">
                            <label for="editEmail" class="form-label">Email</label>
                            <input type="text" id="editEmail" class="form-control" placeholder="Enter Email" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label" for="editGender">Gender</label>
                            <select id="editGender" class="form-control">
                                <option value="">Select Option</option>
                                <option value="Female">Female</option>
                                <option value="Male">Male</option>
                            </select>
                        </div>
                        <div class="col mb-3">
                            <label class="form-label" for="editGrade">Grade</label>
                            <select id="editGrade" class="form-control">
                                <option value="">Select Option</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label for="InputFoto" class="form-label">Profile Picture</label>
                            <input type="file" id="InputFoto" class="form-control" />
                        </div>
                        <div class="col mb-3">
                            <label for="cvInput" class="form-label">CV File</label>
                            <input type="file" id="AddCv" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label" for="editStatusEmploye">Status Employee</label>
                            <select id="editStatusEmploye" class="form-control">
                                <option value="">Select Option</option>
                                <option value="idle">Idle</option>
                                <option value="onsite">On Site</option>
                                <option value="owner">Owner</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="col mb-3">
                                <label for="editSkills">Skills:</label>
                                <select id="editSkills" class="form-control" multiple="multiple" style="width: 300px; height: 200px;"></select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-save">Save</button>
                        <div class="spinner-border text-dark" role="status" style="display: none;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#skillsInput').select2({
                tags: true,
                tokenSeparators: [',', ' '],
                placeholder: "Select or add skills"
            });
        });
    </script>

    <!-- DataTables JavaScript -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- DataTables Buttons JavaScript -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.colVis.min.js"></script>

    <!-- Your DataTable Initialization Script -->
    <script src="~/js/Employee.js" asp-append-version="true"></script>

}


